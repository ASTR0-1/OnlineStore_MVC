@model OnlineStore_BLL.DTO.AuthDTO.SignIn

<div class="auth-wrapper container-fluid position-absolute">
    <div class="auth-form position-absolute">
        <form method="post" asp-controller="Account" asp-action="Login">
            <h2>Login</h2>
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label><br />
                <input class="form-control" asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label><br />
                <input class="form-control" asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>

            <input class="btn btn-primary" type="submit" value="Login" />
            <a class="btn btn-danger" asp-controller="Account" asp-action="ForgotPassword">Forgot password</a>
        </form>
    </div>
</div>