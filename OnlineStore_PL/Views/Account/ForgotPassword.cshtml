@model OnlineStore_BLL.DTO.AuthDTO.ForgotPassword

<div class="auth-wrapper container-fluid position-absolute">
    <div class="auth-form position-absolute">
        <form method="post" asp-controller="Account" asp-action="ForgotPassword" autocomplete="off">
            <h2>Forgot password</h2>
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label><br />
                <input class="form-control" asp-for="Email" autocomplete="off" />
                <span asp-validation-for="Email"></span>
            </div>

            <input class="btn btn-primary" type="submit" value="Submit" />
        </form>
    </div>
</div>