@model OnlineStore_BLL.DTO.AuthDTO.ResetPassword

<div class="auth-wrapper container-fluid position-absolute">
    <div class="auth-form position-absolute">
        <form method="post" asp-controller="Account" asp-action="ResetPassword">
            <h2>Reset password</h2>
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group invisible">
                <input type="hidden" asp-for="Email" value="@ViewBag.Email"/>
                <input type="hidden" asp-for="Token" value="@ViewBag.Token" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label><br />
                <input class="form-control" asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label><br />
                <input class="form-control" asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>

            <input class="btn btn-primary" type="submit" value="Reset" />
        </form>
    </div>
</div>